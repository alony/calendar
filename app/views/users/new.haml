-semantic_form_for @user do |f|
  -f.inputs do
    =f.input :name, :required => false
    =f.input :email
    =f.input :password
    =f.input :password_confirmation, :label => "Please confirm"
    =f.input :birthday, :required => false
  -f.buttons do
    =f.commit_button
    
%p=link_to "Back to List", users_path